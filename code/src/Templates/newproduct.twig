{% extends 'base.twig' %}
{% block content %}
    {% for message in messages %}
        message
    {% endfor %}
<div style="width: 50%;margin: 0 auto; margin-top: 10%;" >
    <form method="post" action="{{ action }}" >
        <div class="form-group">
            <label>Title</label>
            <input value="{{ product.title }}" type="text" class="form-control" name="title"   placeholder="Enter title">
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="3">{{ product.description }}</textarea>
        </div>
        <button name="submit" type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
{% endblock %}