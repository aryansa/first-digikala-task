{% extends 'base.twig' %}
{% block content %}
    <form action="/" method="GET">
        <div class="card mt-3 mb-3">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-8">
                        <input type="text" class="form-control" name="keyword" placeholder="Keyword">
                    </div>

                    <div class="col-2">
                        <input type="text" class="form-control" name="min_price" placeholder="Min Price">
                    </div>

                    <div class="col-2">
                        <input type="text" class="form-control" name="max_price" placeholder="Max Price">
                    </div>
                </div>
                <div class=" row">
                    <div class="col-1"><label>Colors:</label></div>
                    <div class="col-10 row">
                        {% for color in colors %}
                            <div class="col-1">
                                <div class="form-check">
                                    <input class="form-check-input" id="color_{{ color.id }}" value="{{ color.id }}"
                                           type="checkbox"
                                           name="color[]">
                                    <label class="form-check-label" for="color_{{ color.id }}">
                                        {{ color.name }}
                                    </label>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="form-group col-1">
                        <button type="submit" name="submit" class="btn btn-primary">Search</button>
                    </div>
                </div>
            </div>
        </div>
    </form>

    <ul style="list-style: none">
        {% for product in products %}
            <li style="float: left;margin: 20px;">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.title }}</h5>
                        <p class="card-text">{{ product.description }}</p>
                        <a href="/view/{{ product.id }}" class="btn btn-primary">Read more</a>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endblock %}